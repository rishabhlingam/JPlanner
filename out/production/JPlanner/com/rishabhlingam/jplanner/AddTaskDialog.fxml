<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rishabhlingam.jplanner.AddTaskController"
            prefHeight="400.0" prefWidth="600.0">
    <content>
        <GridPane vgap="10" hgap="10" gridLinesVisible="false">
            <Label text="Description" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Date" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Details" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="detailsTextArea" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" wrapText="true"/>
        </GridPane>
    </content>
</DialogPane>
